{
    "name": "CBI Weather",
    "short_name": "CBI Weather",
    "version": "0.1.1",
    "manifest_version": 2,
    "description": "Current weather/flag status at CBI",
    "homepage_url": "http://github.com/cmattoon/cbi-weather",
    "icons": {
	"16": "icons/burgee-16.png",
	"48": "icons/burgee-48.png",
	"128": "icons/burgee-128.png"
    },
    "background": {
	"scripts": [
	    "src/bg/background.js"
	],
	"persistent": true
    },
    "permissions": [
	"*://portal2.community-boating.org/"
    ],
    "browser_action": {
	"default_icon": "icons/burgee-20.png",
	"default_title": "Current Weather @ CBI",
	"default_popup": "src/browser_action/browser_action.html"
    }
}
